import cv2
import matplotlib.pyplot as plt
import numpy as np

# Leer imagen (en color BGR)
img = cv2.imread('C:\\descarga chatgpt.png')

# Convertir de BGR a RGB (para mostrar bien en Matplotlib)
img_rgb = cv2.cvtColor(img, cv2.COLOR_BGR2RGB)

# Filtro de convolución (promedio simple)
kernel = np.ones((3, 3), np.float32) / 9
filtro_convolucion = cv2.filter2D(img, -1, kernel)
filtro_convolucion_rgb = cv2.cvtColor(filtro_convolucion, cv2.COLOR_BGR2RGB)

# Mostrar ambas imágenes lado a lado
plt.figure(figsize=(10, 4))

plt.subplot(1, 2, 1)
plt.title('Original')
plt.imshow(img_rgb)
plt.axis('off')

plt.subplot(1, 2, 2)
plt.title('Filtro de Convolución')
plt.imshow(filtro_convolucion_rgb)
plt.axis('off')

plt.tight_layout()
plt.show()
